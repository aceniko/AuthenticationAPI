@page
@model DemoWeb.Areas.Identity.Pages.Account.QrCodeLoginModel
@{
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="qrlogin" method="post">
                <h2>Use a QR Code log in.</h2>
                <hr />
                <img src="data:image/png;base64, @Model.Input.QrCodeImageBase64" alt="Qr Code" class="qr-image" />
                <input asp-for="Input.SessionId" hidden="hidden" />
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" hidden="hidden">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use WebAuthenticator mobile app to login.</h3>
        </section>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/qrlogin.js"></script>